<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/black_windows_color</item>
        <item name="android:actionMenuTextAppearance">@style/TextView.DefaultStyle</item>
        <item name="android:actionOverflowMenuStyle">@style/TextView.DefaultStyle</item>
        <item name="android:listPreferredItemHeightSmall">72dp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView.DefaultStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/menu_text_size</item>

    </style>

    <style name="CircularBarPagerStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_arc_max">100</item>
        <item name="arc_progress">0</item>

        <item name="progress_arc_clockwise_outline_width">0.75dp</item>
        <item name="progress_arc_counter_clockwise_outline_width">0.75dp</item>
        <item name="progress_arc_clockwise_width">8dp</item>
        <item name="progress_arc_counter_clockwise_width">8dp</item>

        <item name="progress_start_line_enabled">true</item>
        <item name="progress_pager_on_click_enabled">true</item>
        <item name="progress_arc_clockwise_color">#0093C7</item>
        <item name="progress_arc_counter_clockwise_color">#0093C7</item>
        <item name="progress_pager_fill_circle_color">#00000000</item>
    </style>

</resources>
